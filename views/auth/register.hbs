      alt=""
    />

  <div>
    <h2 class="self-start font-bold text-custom-blue-500 text-2xl mt-32">
      Register
    </h2>
    <form action="/register" method="POST" class="mt-4 w-96">
      <label
        for="username"
        class="block text-sm font-medium text-gray-700"
      >Username</label>
      <input
        type="text"
        name="username"
        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-custom-blue-500 focus:ring-custom-blue-500 sm:text-sm"
      />
      <label
        for="email"
        class="mt-4 block text-sm font-medium text-gray-700"
      >Email</label>

      <input
        type="text"
        name="email"
        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-custom-blue-500 focus:ring-custom-blue-500 sm:text-sm"
      />
      <label
        for="password"
        class="mt-4 block text-sm font-medium text-gray-700"
      >Password</label>

      <input
        type="password"
        name="password"

        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-custom-blue-500 focus:ring-custom-blue-500 sm:text-sm"
      />
      <div class="flex justify-between items-center gap-2">
        <span class="inline-flex py-2 mt-4 text-sm text-gray-500">Do you have
          already an account?&nbsp;<a
            href="/login"
            class="text-custom-blue-500 font-semibold underline"
          >
            Login</a>
        </span>
        <button
          type="submit"
          class="inline-flex justify-center rounded-md border mt-4 border-transparent bg-custom-blue-500 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-custom-blue-600 focus:outline-none focus:ring-2 focus:ring-custom-blue-500 focus:ring-offset-2"
        >
          Register
        </button>
      </div>
    </form>
  </div>
