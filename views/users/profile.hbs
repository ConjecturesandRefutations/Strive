<div class="wrapper flex">
  <!-- Side bar  -->
  <div class="sidebar w-80 p-4 bg-slate-100 h-screen flex flex-col gap-4">
    <!-- Branding -->
    <div class="branding flex items-center">
      <span
        class="text-2xl text-custom-blue-500 font-bold uppercase tracking-widest"
      >Strive</span>
    </div>
    <!-- Profile -->
    <div class="profile flex flex-col bg-white shadow-md rounded-md p-4">
      <div class="flex items-center gap-4 mb-4">
        <img src="/images/user.png" class="w-12" alt="" />
        <div class="flex flex-col">
          <span class="user-name font-bold">Anil Ozsoy</span>
          <span class="email text-sm text-gray-400">@anilozsoy</span>
        </div>
      </div>
      <div class="description text-sm mb-4 text-slate-500">
        üèÉ‚Äç‚ôÇÔ∏è Daily running addict.
      </div>
